№1
#include <stdio.h>
#include <locale.h>
#include <math.h>
int main() 
{ 
	setlocale(LC_ALL, "Rus");
	int n, x;
	printf("Сколько прошло времени с начала суток(в секундах) ");
	scanf("%d", &n);
	x = n % 60;
	printf("Прошло с последней минуты %d секунд", x);
}
№2
#include <stdio.h>
#include<locale.h>
#include<math.h>
int main() 
{
	setlocale(LC_ALL, "Rus");
	int k, x;
	printf("Введите целое число K ");
	scanf("%d", &k);
	x = k%7;
	printf("Номер дня недели %d\n", x);

}
№3
#include <stdio.h>
#include<locale.h>
#include<math.h>
int main()
{
	setlocale(LC_ALL, "Rus");
	int k,n, x;
	printf("Введите целое число K и номер, под которым было 1 января ");
	scanf("%d%d", &k, &n);
	x = (k + n - 1) % 7;
	printf("Номер дня недели %d\n", x);

}
№4
#include <stdio.h>
#include<locale.h>
#include<math.h>
int main()
{
	setlocale(LC_ALL, "Rus");
	int a,b,c, x,l,k;
	printf("Введите стороны A,B и C соответственно ");
	scanf("%d%d%d", &a, &b, &c);
	x = (a / c) * (b / c);
	l = a * b - c * c * x;
	printf("Количество квадратов: %d\n Площадь незанятой части: %d\n", x,l);

}
№5
#include <stdio.h>
#include<locale.h>
#include<math.h>
int main()
{
	setlocale(LC_ALL, "Rus");
	int a, b, c, x, l, k;
	printf("Введите год ");
	scanf("%d", &a);
	if (a % 10 >= 1 && ((a / 100) / 10) > 0)
	{
		x = a / 100;
		k = x + 1;
	}
	else
		k = a / 100;
	printf("Столетие: %d\n", k);

}
